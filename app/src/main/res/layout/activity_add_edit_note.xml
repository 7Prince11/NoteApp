<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.NotesApp.AppBarOverlay"
        android:elevation="4dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:navigationIcon="@drawable/ic_back"
            app:popupTheme="@style/Theme.NotesApp.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_edit"
                            android:tint="@color/colorPrimary"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Заголовок"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <EditText
                        android:id="@+id/editTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Введите заголовок заметки"
                        android:textSize="18sp"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_secondary"
                        android:background="@android:color/transparent"
                        android:padding="8dp"
                        android:maxLines="2"
                        android:inputType="textCapSentences" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_description"
                            android:tint="@color/colorPrimary"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Содержание"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <EditText
                        android:id="@+id/editContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Введите содержание заметки"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_secondary"
                        android:background="@android:color/transparent"
                        android:padding="8dp"
                        android:minLines="3"
                        android:gravity="top"
                        android:inputType="textCapSentences|textMultiLine" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_alarm"
                            android:tint="@color/colorPrimary"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Напоминание"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipReminder"
                        style="@style/Widget.MaterialComponents.Chip.Action"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Добавить напоминание"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"
                        app:chipIcon="@drawable/ic_alarm"
                        app:chipIconTint="@color/colorPrimary"
                        app:chipIconSize="22dp"
                        app:chipStrokeColor="@color/colorPrimary"
                        app:chipStrokeWidth="1dp"
                        app:chipBackgroundColor="@color/chip_background"
                        app:chipCornerRadius="15dp" />

                    <!-- ORANGE highlight block -->
                    <LinearLayout
                        android:id="@+id/reminderDetailsContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/compact_reminder_background"
                        android:padding="16dp"
                        android:layout_marginBottom="12dp"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/textReminderDateTime"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:visibility="gone" />

                            <ImageButton
                                android:id="@+id/btnClearReminder"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/ic_clear"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:tint="@color/text_secondary"
                                android:visibility="gone" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/textRepeatDays"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_more_vert"
                            android:tint="@color/colorPrimary"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Категория"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:singleSelection="true"
                        app:chipSpacingHorizontal="8dp"
                        app:chipSpacingVertical="4dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipPersonal"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Личное"
                            android:textColor="@color/category_personal"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:checked="true"
                            app:chipBackgroundColor="@android:color/transparent"
                            app:chipStrokeColor="@color/category_personal"
                            app:chipStrokeWidth="3dp"
                            app:chipCornerRadius="18dp"
                            app:checkedIconVisible="true"
                            app:checkedIcon="@drawable/ic_check"
                            app:checkedIconTint="@color/category_personal" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipWork"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Работа"
                            android:textColor="@color/category_work"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            app:chipBackgroundColor="@android:color/transparent"
                            app:chipStrokeColor="@color/category_work"
                            app:chipStrokeWidth="2dp"
                            app:chipCornerRadius="18dp"
                            app:checkedIconVisible="true"
                            app:checkedIcon="@drawable/ic_check"
                            app:checkedIconTint="@color/category_work" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipFamily"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Семья"
                            android:textColor="@color/category_family"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            app:chipBackgroundColor="@android:color/transparent"
                            app:chipStrokeColor="@color/category_family"
                            app:chipStrokeWidth="2dp"
                            app:chipCornerRadius="18dp"
                            app:checkedIconVisible="true"
                            app:checkedIcon="@drawable/ic_check"
                            app:checkedIconTint="@color/category_family" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipErrand"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Поручение"
                            android:textColor="@color/category_errand"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            app:chipBackgroundColor="@android:color/transparent"
                            app:chipStrokeColor="@color/category_errand"
                            app:chipStrokeWidth="2dp"
                            app:chipCornerRadius="18dp"
                            app:checkedIconVisible="true"
                            app:checkedIcon="@drawable/ic_check"
                            app:checkedIconTint="@color/category_errand" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipOther"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Другое"
                            android:textColor="@color/category_other"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            app:chipBackgroundColor="@android:color/transparent"
                            app:chipStrokeColor="@color/category_other"
                            app:chipStrokeWidth="2dp"
                            app:chipCornerRadius="18dp"
                            app:checkedIconVisible="true"
                            app:checkedIcon="@drawable/ic_check"
                            app:checkedIconTint="@color/category_other" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipEveryday"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ежедневно"
                            android:textColor="@color/recurring_indicator_color"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            app:chipBackgroundColor="@android:color/transparent"
                            app:chipStrokeColor="@color/recurring_indicator_color"
                            app:chipStrokeWidth="2dp"
                            app:chipCornerRadius="18dp"
                            app:checkedIconVisible="true"
                            app:checkedIcon="@drawable/ic_check"
                            app:checkedIconTint="@color/recurring_indicator_color" />

                    </com.google.android.material.chip.ChipGroup>

                    <Spinner
                        android:id="@+id/spinnerCategory"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:visibility="gone" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="80dp" />

        </LinearLayout>

    </ScrollView>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="20dp"
        android:text="Сохранить"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:icon="@drawable/ic_check"
        app:iconTint="@android:color/white"
        app:backgroundTint="@color/colorPrimary"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp"
        app:cornerRadius="28dp" />

</LinearLayout>
