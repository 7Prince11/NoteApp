<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="14dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@color/card_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Category Top Stripe -->
        <LinearLayout
            android:id="@+id/categoryStripe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/category_work"
            android:orientation="horizontal"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:gravity="center_vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/textCategory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Работа"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                tools:text="РАБОТА" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_pinned_badge_white"
                android:paddingLeft="4dp"
                android:paddingTop="1dp"
                android:paddingRight="4dp"
                android:paddingBottom="1dp"
                android:text="УДАЛЕНО"
                android:textColor="@android:color/white"
                android:textSize="7sp"
                android:textStyle="bold"
                android:textAllCaps="true" />

        </LinearLayout>

        <!-- Main Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <!-- Content Section -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Title -->
                <TextView
                    android:id="@+id/textTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:lineSpacingExtra="1dp"
                    tools:text="Купить продукты в магазине" />

                <!-- Content -->
                <TextView
                    android:id="@+id/textContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:lineSpacingExtra="1dp"
                    tools:text="Молоко, хлеб, яйца, сыр, овощи для салата и фрукты" />

                <!-- Dates Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textCreatedDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="@color/text_tertiary"
                        tools:text="Создано: 25 дек 2024" />

                    <TextView
                        android:id="@+id/textDeletedDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:textSize="11sp"
                        android:textColor="@color/delete_color"
                        android:textStyle="bold"
                        tools:text="Удалено: 26 дек 2024" />

                    <TextView
                        android:id="@+id/textAutoDelete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:textSize="10sp"
                        android:textColor="@color/text_secondary"
                        android:background="@drawable/compact_reminder_background"
                        android:paddingStart="6dp"
                        android:paddingEnd="6dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:visibility="gone"
                        tools:text="Автоудаление через: 25 дн."
                        tools:visibility="visible" />

                </LinearLayout>

            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="8dp"
                android:gravity="center">

                <!-- Restore Button -->
                <ImageButton
                    android:id="@+id/btnRestore"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/menu_button_background"
                    android:contentDescription="Восстановить заметку"
                    android:padding="6dp"
                    android:src="@drawable/ic_restore"
                    android:tint="@color/success_color" />

                <!-- Permanent Delete Button -->
                <ImageButton
                    android:id="@+id/btnPermanentDelete"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/menu_button_background"
                    android:contentDescription="Удалить навсегда"
                    android:padding="6dp"
                    android:src="@drawable/ic_delete_forever"
                    android:tint="@color/delete_color" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>