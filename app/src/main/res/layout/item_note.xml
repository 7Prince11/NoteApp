<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="14dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@color/card_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Category Top Stripe - Smaller -->
        <LinearLayout
            android:id="@+id/categoryStripe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/category_work"
            android:orientation="horizontal"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:gravity="center_vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/textCategory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Работа"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                tools:text="РАБОТА" />

            <!-- Pinned Badge in top stripe - smaller -->
            <TextView
                android:id="@+id/textPinnedBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_pinned_badge_white"
                android:paddingLeft="4dp"
                android:paddingTop="1dp"
                android:paddingRight="4dp"
                android:paddingBottom="1dp"
                android:text="PINNED"
                android:textColor="@android:color/white"
                android:textSize="7sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>

        <!-- Main Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <!-- Checkbox -->
            <CheckBox
                android:id="@+id/checkboxComplete"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginEnd="10dp"
                android:buttonTint="@color/colorPrimary" />

            <!-- Content Section -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Title Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/textTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:lineSpacingExtra="1dp"
                        tools:text="Купить продукты в магазине" />

                    <!-- Pinned Badge for cards without category -->
                    <TextView
                        android:id="@+id/textPinnedBadgeAlt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:background="@drawable/bg_pinned_badge"
                        android:paddingLeft="5dp"
                        android:paddingTop="2dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="2dp"
                        android:text="pinned"
                        android:textColor="#FF9800"
                        android:textSize="8sp"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:visibility="gone"
                        tools:visibility="visible" />

                </LinearLayout>

                <!-- Content -->
                <TextView
                    android:id="@+id/textContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:lineSpacingExtra="1dp"
                    tools:text="Молоко, хлеб, яйца, сыр, овощи для салата и фрукты" />

                <!-- Bottom Row: Date and Reminder -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Date -->
                    <TextView
                        android:id="@+id/textDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/text_tertiary"
                        tools:text="25 дек 2024" />

                    <!-- Spacer -->


                    <!-- Reminder Time with Icon -->
                    <LinearLayout
                        android:id="@+id/reminderContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/compact_reminder_background"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <ImageView
                            android:id="@+id/iconReminder"
                            android:layout_width="11dp"
                            android:layout_height="11dp"
                            android:src="@drawable/ic_alarm_small"
                            android:tint="@color/colorAccent"
                            android:layout_marginEnd="3dp" />

                        <TextView
                            android:id="@+id/textReminderTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11sp"
                            android:textColor="@color/colorAccent"
                            android:textStyle="bold"
                            android:maxLines="1"
                            android:ellipsize="end"
                            tools:text="14:30" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Delete Button -->
            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="6dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Удалить заметку"
                android:padding="4dp"
                android:src="@drawable/ic_delete"
                android:tint="@color/delete_color"
                android:alpha="0.7" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>