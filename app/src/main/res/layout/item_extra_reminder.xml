<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/compact_reminder_background"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:gravity="center_vertical">

    <!-- Reminder Icon -->
    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_alarm_small"
        android:tint="@color/colorAccent"
        android:layout_marginEnd="8dp" />

    <!-- Reminder Info -->
    <TextView
        android:id="@+id/textReminderInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="25 дек 2024 в 14:30"
        android:textColor="@color/text_primary"
        android:textSize="14sp" />

    <!-- Delete Button -->
    <ImageButton
        android:id="@+id/btnDeleteReminder"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_delete"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:tint="@color/delete_color"
        android:scaleType="centerInside"
        android:contentDescription="Удалить напоминание" />

</LinearLayout>